{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "lib": [
            "dom",
            "es2015"
        ],
        "outDir": "lib",
        "sourceMap": true,
        "declaration": false,
        "alwaysStrict": true,
        "noImplicitAny": true,
        "noUnusedParameters": false,
        "noUnusedLocals": true,
        "strictNullChecks": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "allowSyntheticDefaultImports": false,
        "skipLibCheck": true,
        "experimentalDecorators": true
    },
    "include": [
        "source"
    ]
}
